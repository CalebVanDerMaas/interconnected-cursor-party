{
  "name": "cursor-party",
  "main": "src/server.ts",
  "compatibilityDate": "2023-11-30",
  "serve": {
    "path": "public",
    "build": {
      "entry": "src/cursors.tsx",
      "alias": {
        "react": "@preact/compat",
        "react-dom": "@preact/compat"
      },
      "outdir": "public",
      "format": "iife",
      "splitting": false
    },
    "minify": true,
    "singlePageApp": true
  },
  "build": {
    "command": "node scripts/splash-script.mjs"
  }
}
